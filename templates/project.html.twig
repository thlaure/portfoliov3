{% extends 'base.html.twig' %}

{% block title %}Thomas LAURE | Projet {{ project.title }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
{{ encore_entry_link_tags('project_css') }}
{% endblock %}

{% block inner_body %}
<div class="fluid-container">
    <div class="parallax-header-project">
        <a href="{{ path('home') }}" class="btn btn-light rounded-pill p-md-3 font-weight-bold col-md-2 m-3" title="Return to home"><i class="fas fa-arrow-left"></i> Retour</a>
        <h1 class="text-monospace text-center text-light mt-4">{{ project.title }}</h1>
        <hr class="sm-separator w-25">
        <h2 class="text-center text-light font-italic font-weight-light">{{ project.tag }}</h2>
    </div>
    <div class="mt-5 container">
        <p class="lead text-justify">{{ project.description|nl2br }}</p>
        {% if project.files.file is defined %}
        <a href="{{ asset('/public/build/docs/' ~ project.files.file) }}" class="lead unstyled">{{ project.files.name }}</a>
        {% endif %}
        {% if project.images.images is defined %}
        <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for i in 0..project.images.images|length %}
                <li data-target="#carouselIndicators" data-slide-to="{{ i }}" {% if i == 0 %}class="active"{% endif %}></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for image in project.images.images %}
                <div class="carousel-item {% if loop.index == 1 %}active{% endif %}">
                    <img src="{{ asset('/public/build/images/' ~ image) }}" class="d-block w-100" alt="Image #{{ loop.index }}">
                </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}